@model CategoryDetailsViewModel

<h2>BakeryItems By Category </h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Id"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="DateAdded"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.DateAdded.Value.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BakeryItems)
        </dt>
        <dd class="col-sm-10">

            <table class="table">
                <tr>
                    <th>BakeryItem Name</th>
                    <th>Price</th>
                </tr>
                @if (Model.BakeryItems.Any())
                {
                    @foreach (var pie in Model.BakeryItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(category => pie.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(category => pie.Price)
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <table class="table">
                        <tr>
                            <td colspan="4">
                                <p>No bakery items found for this category.</p>
                            </td>
                        </tr>
                    </table>
                }
            </table>
        </dd>
    </dl>
</div>

